{
  "eslint.format.enable": true,
  "editor.fontSize": 16,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true,
    "source.fixAll.eslint": true
  },

  "workbench.colorTheme": "Night Wolf (gray)",
  "editor.fontFamily": "Operator Mono Light Italics, MonoLisa, Menlo, Monaco, 'Courier New', monospace",
  "workbench.iconTheme": "vscode-icons",
  "editor.fontLigatures": true,
  //"editor.fontLigatures": "'calt', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'zero', 'onum'",
  "reactSnippets.settings.typescriptPropsStatePrefix": "type",

  "tailwindCSS.experimental.classRegex": [
    ["Classes \\=([^;]*);", "'([^']*)'"],
    ["Classes \\=([^;]*);", "\"([^\"]*)\""],
    ["Classes \\=([^;]*);", "\\`([^\\`]*)\\`"]
  ]
}
